<!DOCTYPE html>
<html lang="es">
  <head>
    <title>NOTAS</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/main/sty_alumnos.css">
    <%- include ../includes/header -%>
  </head>
  <body style="margin-top: 70px;">
    <%- include ../includes/navbar -%>

    <div class="container p-3">
      <% if (msn) { %>
      <div class="row">
        <div class="col-md-12">
            <% if (tipo == "success") { %>
              <div class="alert alert-success text-center" role="alert" style="padding: 5px; width: 100%;">
                <%= msnText %>
              </div>            
            <% } %>

            <% if (tipo == "err") { %>
              <div class="alert alert-danger text-center" role="alert" style="padding: 5px; width: 100%;">
                <%= msnText %>
              </div>            
            <% } %>
        </div>
      </div>
      <% } %>

        
      <div class="row">
        <div class="col-md-12 border-bottom border-danger">
          <h3>NOTAS</h3>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-md-12">
          <form action="/notas/filter" method="GET" class="form-inline d-flex justify-content-center">
              <div class="pm-container" style="display: grid; grid-template-columns: 1fr 1fr; grid-gap: 5px;">
                  <div class="">
                    <label class="sr-only" for="inGrado">Grado</label>
                    <input type="text" class="form-control mb-2 mr-sm-2" name="inGrado" id="inGrado" placeholder="Grado" >
                  </div>
                  <div class="">
                    <label class="sr-only" for="inGrado">Seccion</label>
                    <input type="int" class="form-control mb-2 mr-sm-2" name="inSeccion" id="inSeccion" placeholder="Seccion" >
                  </div>
                </div>
                <div class="">
                  <button type="submit" class="btn btn-outline-danger mb-2">Buscar</button>                  
                </div>
            </form>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-12">
          <div class="table-responsive table-striped table-sm">
            <table class="table table-lg" style="font-size: 0.8em !important">
              <tr>
                <th>Carne</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Grado</th>
                <th>Seccion</th>
                <th>Opcion</th>                
              </tr>
              <%
                for(var i=0; i<=data.length-1; i++){
                  var obj = data[i];
              %>
              <tr>
                <% for(var reg in obj){ %> 
                    <td name="<%- obj.ID_ALUMNO%>"><%- obj[reg]%></td> 
                <% } %>
                  <td class="d-print-none">
                    <a onclick="Asignar('<%- obj.ID_ALUMNO%>')" class="btn btn-outline-danger text-danger btn-sm mr-1">Notas</a>
                    <a onclick="Reporte('<%- obj.ID_ALUMNO%>')" class="btn btn-outline-danger text-danger btn-sm mr-1">Reporte</a>
                  </td>  
    
              </tr>
              <% } %> 
            </table>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Notas</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">   
                <div class="form-group">
                  <label>Fecha</label>
                  <input type="text" name="Fecha" id="Fecha" class="form-control" placeholder="YYYY/MM/DD" >
                </div>
                <div class="form-group">
                  <label>Matematica</label>
                  <input type="number" name="Matematica" id="Matematica" class="form-control" >
                </div>
                <div class="form-group">
                  <label>Ciencias Naturales</label>
                  <input  type="number" name="Ciencias" id="Ciencias" class="form-control" >
                </div>
                <div class="form-group">
                  <label>Ciencias Sociales</label>
                  <input  type="number" name="Sociales" id="Sociales" class="form-control" >
                </div>
                <div class="form-group">
                  <label>Lenguaje</label>
                  <input  type="number" name="Lenguaje" id="Lenguaje" class="form-control" >
                </div>
                <div class="form-group">
                  <label>Artes plasticas</label>
                  <input  type="number" name="plasticas" id="plasticas" class="form-control" >
                </div>
                <div class="form-group">
                  <label>Artes industriales</label>
                  <input  type="number" name="industriales" id="industriales" class="form-control" >
                </div>
                <div class="form-group d-flex justify-content-center">
                  <button id="btnSubmit" class="btn btn-primary">Ingresar</button>
                </div>
            </div>
          </div>
        </div>
      </div>

    </div>

      

    <%- include ../includes/footer -%>
    <%- include ../includes/scripts -%>
    <script src="/javascripts/main/scr_notas.js"></script>
  </body>
</html>



