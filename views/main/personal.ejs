<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="stylesheets/main/sty_inscripciones.css">
  <title>PERSONAL</title>
  <%- include ../includes/header -%>
</head>
<body style="margin-top: 70px">
  <%- include ../includes/navbar -%>

  <div class="container p-3">
    <div class="row">
      <div class="col-md-12 border-bottom border-primary">
        <h3>PERSONAL</h3>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-12">
        <div class="table-responsive table-striped">
          <table class="table table-lg" style="font-size: 0.8em !important">
            <tr>
              <th>NOMBRE</th>
              <th>APELLIDO</th>
              <th>TELEFONO</th>
              <th>AREA</th>
              <th>OPCION</th>
            </tr>
            <%
              for(var i=0; i<=data.length-1; i++){
                var obj = data[i];
            %>
            <tr>
              <% for(var reg in obj){ %> 
                <% if (reg != 'ID_PERSONAL') { %> 
                  <td>
                    <%- obj[reg]%>
                  </td>
                <% } %>                  
              <% } %>
                <td>
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                      <label class="btn btn-danger btn-sm" onclick="location.href='/personal/delete/'+'<%- obj.ID_PERSONAL%>'">
                          <i class="material-icons" style="height:5px;"> delete_forever </i>
                      </label>
                      <label class="btn btn-primary btn-sm" onclick="location.href='/personal/update/'+'<%- obj.ID_PERSONAL%>'" >
                          <i class="material-icons" style="height:5px;"> autorenew </i>
                      </label>
                  </div>
                </td>  
  
            </tr>
            <% } %> 
          </table>
        </div>
      </div>
    </div>

    <% if (msn) { %>
      <div class="row">
        <div class="col-md-12">
            <% if (tipo == "success") { %>
              <div class="alert alert-success text-center" role="alert" style="padding: 5px; width: 100%;">
                <%= msnText %>
              </div>            
            <% } %>

            <% if (tipo == "err") { %>
              <div class="alert alert-danger text-center" role="alert" style="padding: 5px; width: 100%;">
                <%= msnText %>
              </div>            
            <% } %>
        </div>
      </div>
      <% } %>
  </div>


  
  <%- include ../includes/footer -%>
  <%- include ../includes/scripts -%>
  <script src="/javascripts/main/scr_personal.js"></script>
</body>
</html>